<div class="landing w-100" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path('landing6.jpg') %>);">
  <div class="container">
    <h1><strong>Netflix & Chill?</strong></h1>
    <br>
    <%= link_to 'Create List', new_list_path, class: 'btn btn-primary' %>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-4">
        <div class="card mt-5">
          <%= cl_image_tag list.photo.key, width: 400, height: 300, crop: :fill if list.photo.key? %>
          <div class="card-body">
            <h3 class="card-title"><%= link_to list.name, list_path(list), class: "text-decoration-none text-secondary" %></h3>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
