<div class="landing w-100" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path('landing6.jpg') %>);">
  <%= link_to 'Create a New Movie', new_list_path, class: 'btn btn-primary' %>
</div>
</div>
<div class="container mt-5">
  <p class="display-4">Bookmark List</p>
  <div class="row">
    <div class="col-sm-12 text-center">
      <div class="col-md-4">
        <% @list.bookmarks.each do |bookmark| %>
          <div class="card">
            <div class="card-body">
              <img src="<%= bookmark.movie.poster_url %>" alt="Movie Poster">
              <p><%= bookmark.movie.overview %></p>
              <p><%= bookmark.movie.title %></p>
              <p><%= bookmark.movie.rating %></p>
            </div>
          </div>
        <% end %>
        <br>
      </div>
    </div>
  </div>
</div>
</div>
<div class="d-flex justify-content-center my-5">
  <%= link_to "Home", lists_path, class: "btn btn-primary mx-3"%>
  <%= link_to "Bookmark", new_list_bookmark_path(@list), class: "btn btn-primary mx-3" %>
  <%= link_to "Delete", list_path(@list), class: "btn btn-primary mx-3", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
</div>
